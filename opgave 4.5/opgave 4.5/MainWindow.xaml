<Window x:Class="opgave_4._5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:opgave_4._5"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="450">
    <Grid>
        <TextBox x:Name="txtbxInkomen" HorizontalAlignment="Left" Margin="20,20,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,5,0,0" Text="Inkomen:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,50,0,0" Text="Inkomstenbelasting: 20%" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtblZonderBelasting" HorizontalAlignment="Left" Margin="20,70,0,0" Text="Inkomsten zonder belasting: " VerticalAlignment="Top"/>
        <TextBlock x:Name="txtblMetBelasting" HorizontalAlignment="Left" Margin="20,90,0,0" Text="Inkomsten met belasting:" VerticalAlignment="Top"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="20,120,0,0" VerticalAlignment="Top" Width="120" Name="btnCalculate"/>
    </Grid>
</Window>
